<aura:component>
 <!--
        use boolean attribute for Store true/false value,
        make default to "false" so modal box are not display on the load of component.
    -->
    <aura:attribute name="isOpenAdd" type="boolean" default="false"/>
    <aura:attribute name="address" type="Map" />
    <aura:attribute name="State" type="List"/>
    <!-- attributes MAP -->
    <aura:attribute name="mapMarkers" type="Object"/>
    <aura:attribute name="zoomLevel" type="Integer" />


    <!-- <aura:attribute name="street" type="String" default="121 Spear St."/>
    <aura:attribute name="city" type="String" default="San Francisco"/>
    <aura:attribute name="province" type="String" default="CA"/>
    <aura:attribute name="country" type="String" default="US"/>
    <aura:attribute name="postalCode" type="String" default="94105"/>
    <aura:attribute name="provinceOptions" type="List" default="[]"/>
    <aura:attribute name="countryOptions" type="List" default="[]"/>
    <aura:attribute name="previousCountry" type="String"/> -->


    <!--Use "slds-m-around_xx-large" class to add standard X-Large padding to the component-->
    <div class="slds-m-around_xx-large">

        <lightning:buttonIcon iconName="utility:edit" variant="brand" alternativeText="Settings" title="Settings 1" onclick="{! c.openModel }"/>
        <!-- <lightning:button variant="brand"
                          label="{!$Label.c.ViewFullListingBtn}"
                          title="About SFDCmonkey.com"
                          onclick="{! c.openModel }" /> -->
        <!--Use aura:if tag to display Model Box, on the bese of conditions. [isOpen boolean attribute] -->
        <aura:if isTrue="{!v.isOpenAdd}">
            <!--###### MODAL BOX Start######-->
            <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                <div class="slds-modal__container modal__address">
                    <!-- ###### MODAL BOX HEADER Start ######-->
                    <header class="slds-modal__header">
                        <lightning:buttonIcon iconName="utility:close"
                                              onclick="{! c.closeModel }"
                                              alternativeText="close"
                                              variant="bare-inverse"
                                              class="slds-modal__close"/>
                        <div id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">{! v.address.Location_Type__c}</div>
                    </header>
                    <!--###### MODAL BOX BODY Part Start######-->
                    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                        
                        <div class="slds-m-top_medium slds-m-bottom_large" style="max-width: 500px;">
                            <div style="max-width: 500px;">
                                <div class="row">
                                    <div class="col-12">
                                        <lightning:input name="input3" label="Name" placeholder="" value="{!v.address.Name__c}"/>
                                    </div>
                                    <div class="col-12">
                                        <lightning:input name="input3" label="Street" placeholder="" value="{!v.address.Street__c}"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-4">
                                        <lightning:input name="input3" label="City" placeholder="" value="{!v.address.City__c}"/>
                                    </div>
                                    <div class="col-4">
                                        <lightning:select aura:id="select" name="select" label="State" value="{!v.address.State__c}" onchange="{! c.onChange }">
                                            <option value="">State...</option>
                                            <aura:iteration items="{!v.State}" var="item">
                                                <option value="{!item.State_code__c}">{!item.State_Label__c}</option>
                                            </aura:iteration>
                                        </lightning:select>
                                        <!-- <lightning:input name="input3" label="State" placeholder=""/> -->
                                    </div>
                                    <div class="col-4">
                                        <lightning:input name="input3" label="Postal Code" placeholder="" value="{!v.address.PostalCode__c}"/>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <lightning:input name="input3" label="Phone" placeholder="" value="{!v.address.Phone__c}"/>
                                    </div>
                                    <div class="col-6">
                                        <lightning:input name="input3" label="Fax" placeholder="" value="{!v.address.Fax__c}"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <lightning:input name="input3" label="Website" placeholder="" value="{!v.address.Name__c}"/>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <lightning:map  mapMarkers="{! v.mapMarkers }"  zoomLevel="{!v.zoomLevel}" />
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <lightning:input name="input3" label="Latitude" placeholder="" disabled="true" value="{!v.address.Latitude__c}"/>
                                    </div>
                                    <div class="col-6">
                                        <lightning:input name="input3" label="Longitude" placeholder="" disabled="true" value="{!v.address.Longitude__c}"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!--###### MODAL BOX FOOTER Part Start ######-->
                    <footer class="slds-modal__footer">
                        <lightning:button variant="neutral"
                                          label="Continue"
                                          title="Continue"
                                          onclick="{! c.closeModel }"/>
                        <lightning:button variant="brand"
                                          label="Cancel"
                                          title="Cancel"
                                          onclick="{! c.likenClose }"/>
                    </footer>
                </div>
            </section>
            <div class="slds-backdrop slds-backdrop_open"></div>
            <!--###### MODAL BOX Part END Here ######-->

        </aura:if>
    </div>
</aura:component>