<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Modify_Date__c</fullName>
    <description>This field gives the date on the record was Modified</description>
    <externalId>false</externalId>
    <formula>TEXT(YEAR(DATEVALUE(LastModifiedDate))) 
+ 
If(MONTH(DATEVALUE(LastModifiedDate))&lt;=9,&apos;0&apos;+TEXT(MONTH(DATEVALUE(LastModifiedDate))),TEXT(MONTH(DATEVALUE(LastModifiedDate)))) 
+ 
If(DAY(DATEVALUE(LastModifiedDate))&lt;=9,&apos;0&apos;+TEXT(DAY(DATEVALUE(LastModifiedDate))),TEXT(DAY(DATEVALUE(LastModifiedDate))))</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Modify Date</label>
    <required>false</required>
    <trackHistory>false</trackHistory>
    <type>Text</type>
    <unique>false</unique>
</CustomField>
