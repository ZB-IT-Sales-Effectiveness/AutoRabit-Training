<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>SAP_Number_Check</fullName>
    <active>true</active>
    <errorConditionFormula>If(	(NOT($Permission.Custom_Permission_for_SAP_Field) || $User.Id=&quot;005C0000009SZVQ&quot; || $User.Id=&quot;005C0000009QipC&quot; || $User.Id=&quot;005C0000009SZaf&quot;),false,(	
		AND(
			ISPICKVAL(Employee_Non_Employee__c, &quot;Yes&quot;),
			ISBLANK(SAP__c)
		)
	)
)</errorConditionFormula>
    <errorMessage>Please provide SAP Number</errorMessage>
</ValidationRule>
