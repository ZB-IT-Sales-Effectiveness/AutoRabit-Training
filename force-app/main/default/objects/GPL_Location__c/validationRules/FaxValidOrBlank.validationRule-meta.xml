<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>FaxValidOrBlank</fullName>
    <active>true</active>
    <errorConditionFormula>NOT( OR (ISBLANK(Fax__c),OR(REGEX(Fax__c, &quot;\\D*?(\\d\\D*?){10}&quot;),REGEX(Fax__c,&quot;^\\+(?:[0-9] ?){6,14}[0-9]$&quot;))))</errorConditionFormula>
    <errorDisplayField>Fax__c</errorDisplayField>
    <errorMessage>Fax number must be a valid US or International phone number. (###)###-#### or +## ##### #####</errorMessage>
</ValidationRule>
