<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CountrySelected</fullName>
    <active>true</active>
    <description>Ensure a country is selected from the Country picklist</description>
    <errorConditionFormula>ISPICKVAL(Country__c, &apos;&apos;)</errorConditionFormula>
    <errorDisplayField>Country__c</errorDisplayField>
    <errorMessage>A country must be specified.</errorMessage>
</ValidationRule>
