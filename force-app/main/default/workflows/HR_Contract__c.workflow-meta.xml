<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>Contract_Expired_Update</fullName>
        <field>Contract_Expired__c</field>
        <formula>IF(ISPICKVAL(Contract_Type__c ,&quot;Asset Waiver&quot;), &quot;No&quot;, IF( Is_Expired__c = &quot;Yes&quot;  &amp;&amp;  NOT(ISPICKVAL(Contract_Type__c ,&quot;Asset Waiver&quot;)), &quot;Yes&quot;, &quot;No&quot;))</formula>
        <name>Contract Expired Update</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>AM-US Contract</fullName>
        <actions>
            <name>Contract_Expired_Update</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>HR_Contract__c.Contract_Type__c</field>
            <operation>equals</operation>
            <value>Asset Waiver,Other,Non-Compete,Non-Compete Verbal,Confidentiality</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>AM-US Contracts</fullName>
        <active>true</active>
        <criteriaItems>
            <field>HR_Contract__c.Duration_Date__c</field>
            <operation>greaterOrEqual</operation>
            <value>TODAY</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
