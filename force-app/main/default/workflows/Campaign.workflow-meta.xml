    <rules>
        <fullName>Assign DN Exhibit Campaign Owner To Sherry</fullName>
        <actions>
            <name>Update_Campaign_Owner</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Campaign.RecordTypeId</field>
            <operation>equals</operation>
            <value>DN- Regional Event/Exhibit Request</value>
        </criteriaItems>
        <description>Assign DN Exhibit Campaign Owner To Sherry on Create</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Auto-Active DN Exhibit Campaign</fullName>
