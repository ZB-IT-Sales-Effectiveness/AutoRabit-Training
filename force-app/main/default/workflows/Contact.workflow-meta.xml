    <rules>
        <fullName>Marketo Do Not Sync False</fullName>
        <actions>
            <name>Do_Not_Sync_False</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>Account.mkto71_Do_Not_Sync__c = False 

&amp;&amp; 


( 
NOT(ISBLANK( Email )) 
&amp;&amp; 
CONTAINS(Email,&apos;@&apos;) 
&amp;&amp; 
NOT(ISBLANK( MailingCountry)) 
&amp;&amp; 
RecordTypeId = &quot;012C0000000Q7mz&quot;) 

|| 

( 
NOT(ISBLANK( Email )) 
&amp;&amp; 
CONTAINS(Email,&apos;@&apos;) 
&amp;&amp; 
MailingCountry = &quot;US&quot; 
&amp;&amp; 
OR( 
RecordTypeId =&quot;012800000003ZTZ&quot;, 
RecordTypeId = &quot;012800000002DoL&quot;, 
RecordTypeId = &quot;012800000002DoB&quot;) 
)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Marketo Do not sync True</fullName>
        <actions>
            <name>Do_Not_Sync_True</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>Account.mkto71_Do_Not_Sync__c =True 
|| 
OR 
( 
ISBLANK( Email ), 
NOT(CONTAINS(Email,&apos;@&apos;)), 
ISBLANK(MailingCountry), 
(OR(RecordTypeId &lt;&gt; &quot;012800000003ZTZ&quot;, 
RecordTypeId &lt;&gt; &quot;012800000002DoL&quot;, 
RecordTypeId &lt;&gt; &quot;012C0000000Q7mz&quot;, 
RecordTypeId &lt;&gt; &quot;012800000002DoB&quot;)) 
)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
