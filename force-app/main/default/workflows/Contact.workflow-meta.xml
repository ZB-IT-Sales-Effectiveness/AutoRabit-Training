    <rules>
        <fullName>Check rehire if Sales Contact is re-activated</fullName>
        <actions>
            <name>Check_Rehire</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>Check rehire if Sales Contact is re-activated</description>
        <formula>AND(RecordType.Name=&apos;Sales Contact&apos;,
     ISCHANGED(Inactive__c),
      PRIORVALUE(Inactive__c) = TRUE,
       Inactive__c = FALSE
     )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
