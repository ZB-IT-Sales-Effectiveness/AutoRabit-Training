<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>EU_DE_Contract_Expiration_Notice</fullName>
        <description>EU-DE-Contract Expiration Notice</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>StandardEMailVorlagen/EU_DE_Contract_Expiration_Notice</template>
    </alerts>
    <alerts>
        <fullName>EU_DE_Contract_Next_Payment_Notice</fullName>
